---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import BackgroundEffects from '../components/BackgroundEffects.astro';
---

<Layout title="Pedro Chans - Portfolio">
	<BackgroundEffects variant="particles" />
	<Header />
	<Hero />
	
	<!-- Placeholder sections for navigation -->
	<section id="about" class="section">
		<div class="container">
			<h2>About Section</h2>
			<p>This section will contain information about you.</p>
		</div>
	</section>
	
	<section id="projects" class="section">
		<div class="container">
			<h2>Projects Section</h2>
			<p>This section will showcase your projects.</p>
		</div>
	</section>
	
	<section id="certificates" class="section">
		<div class="container">
			<h2>Certificates Section</h2>
			<p>This section will display your certificates.</p>
		</div>
	</section>
</Layout>
