<script>
  // Declaraciones de tipos para anime.js
  interface AnimeInstance {
    (params: any): any;
    timeline: (params: any) => any;
    stagger: (value: number, options?: any) => any;
  }

  declare const anime: AnimeInstance;

  // Importar anime.js desde CDN
  const script = document.createElement('script');
  script.src = 'https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js';
  script.onload = initializeTimeline;
  document.head.appendChild(script);

  function initializeTimeline(): void {
    // Verificar que anime esté disponible
    if (typeof anime === 'undefined') {
      console.error('anime.js no está cargado');
      return;
    }

    const timelineSteps = document.querySelectorAll('.timeline-step');
    const timelineDots = document.querySelectorAll('.timeline-dot');
    const timelineProgress = document.querySelector('.timeline-line-progress') as HTMLElement;
    const contentArea = document.querySelector('.timeline-content-area') as HTMLElement;
    const sectionTitle = document.querySelector('.timeline-section .section-title') as HTMLElement;
    const sectionSubtitle = document.querySelector('.timeline-section .section-subtitle') as HTMLElement;
    
    let currentActiveStep = 0;
    const totalSteps = timelineSteps.length;

    // Animación inicial del header
    anime.timeline({
      easing: 'easeOutExpo',
      duration: 1000
    })
    .add({
      targets: sectionTitle,
      opacity: [0, 1],
      translateY: [50, 0],
      delay: 200
    })
    .add({
      targets: sectionSubtitle,
      opacity: [0, 1],
      translateY: [30, 0],
      delay: 100
    }, '-=800');

    // Animación inicial de los dots
    anime({
      targets: '.timeline-dot',
      opacity: [0, 1],
      scale: [0.5, 1],
      duration: 800,
      delay: 800,
      easing: 'easeOutElastic(1, .8)'
    });

    // Función para activar un step específico
    function activateStep(stepIndex: number): void {
      if (stepIndex === currentActiveStep) return;

      // Desactivar step anterior
      const prevStep = timelineSteps[currentActiveStep];
      const prevDot = timelineDots[currentActiveStep];
      if (prevStep) prevStep.classList.remove('active');
      if (prevDot) prevDot.classList.remove('active');

      // Activar nuevo step
      currentActiveStep = stepIndex;
      const currentStep = timelineSteps[stepIndex];
      const currentDot = timelineDots[stepIndex];

      if (currentStep) currentStep.classList.add('active');
      if (currentDot) {
        currentDot.classList.add('active');
        
        // Animar el dot
        const dotInner = currentDot.querySelector('.dot-inner') as HTMLElement;
        if (dotInner) {
          anime({
            targets: dotInner,
            scale: [1, 1.3, 1.2],
            duration: 600,
            easing: 'easeOutElastic(1, .6)'
          });
        }
      }

      // Animar la línea de progreso basada en flexbox
      const progressHeight = ((stepIndex + 1) / totalSteps) * 100; // Porcentaje de la altura total disponible
      anime({
        targets: timelineProgress,
        height: `${progressHeight}%`,
        duration: 800,
        easing: 'easeOutCubic'
      });
    }

    // Sistema SIMPLE: cada scroll = máximo 1 posición
    if (contentArea) {
      let isMoving = false; // Prevenir movimientos múltiples
      
      // Función simple para cambiar posición
      const goToStep = (stepIndex: number) => {
        if (isMoving) return; // Bloquear si ya se está moviendo
        
        const targetStep = Math.max(0, Math.min(totalSteps - 1, stepIndex));
        if (targetStep === currentActiveStep) return; // Ya estamos ahí
        
        isMoving = true;
        const scrollAmount = contentArea.clientHeight;
        
        contentArea.scrollTo({
          top: targetStep * scrollAmount,
          behavior: 'smooth'
        });
        
        activateStep(targetStep);
        
        // Desbloquear después de 500ms
        setTimeout(() => {
          isMoving = false;
        }, 500);
      };
      
      // Manejo SIMPLE de wheel - sin acumuladores
      const handleWheel = (e: WheelEvent) => {
        e.preventDefault();
        
        // Si ya se está moviendo, ignorar
        if (isMoving) return;
        
        // Determinación simple: arriba o abajo
        if (e.deltaY > 0) {
          // Scroll hacia abajo = siguiente posición
          goToStep(currentActiveStep + 1);
        } else if (e.deltaY < 0) {
          // Scroll hacia arriba = posición anterior
          goToStep(currentActiveStep - 1);
        }
      };
      
      // Event listeners simples
      contentArea.addEventListener('wheel', handleWheel, { passive: false });

      // Navegación por teclado SIMPLE
      contentArea.addEventListener('keydown', (e) => {
        switch(e.key) {
          case 'ArrowDown':
          case 'PageDown':
            e.preventDefault();
            goToStep(currentActiveStep + 1);
            break;
          case 'ArrowUp':
          case 'PageUp':
            e.preventDefault();
            goToStep(currentActiveStep - 1);
            break;
          case 'Home':
            e.preventDefault();
            goToStep(0);
            break;
          case 'End':
            e.preventDefault();
            goToStep(totalSteps - 1);
            break;
        }
      });

      // Hacer el área focusable
      contentArea.setAttribute('tabindex', '0');
    }

    // Inicialización
    setTimeout(() => {
      // Activar el primer step y posicionarlo correctamente
      activateStep(0);
      
      // Asegurar que todas las steps sean visibles inicialmente
      timelineSteps.forEach(step => {
        (step as HTMLElement).style.opacity = '1';
      });

      // Asegurar que empezamos desde el principio
      if (contentArea) {
        contentArea.scrollTo({ top: 0, behavior: 'instant' });
      }
    }, 1500);
  }
