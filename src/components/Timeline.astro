---
// Componente Timeline con línea vertical izquierda y anime.js
import { Image } from 'astro:assets';

// Importar todas las imágenes del timeline
import facultadeMatematicas from '../assets/img/facultade_matematicas.jpg';
import uscLogo from '../assets/img/USC_logo.png';
import lodzLogo from '../assets/img/lodz_logo.png';
import ucmImage from '../assets/img/ucm.jpg';
import ucmLogo from '../assets/img/UCM_logo.svg';
import indraOffice from '../assets/img/indra_office.jpg';
import itxOffice from '../assets/img/itx_office.jpg';
import minsaitLogo from '../assets/img/minsait_logo.jpeg';
import indraLogo from '../assets/img/indra_logo.jpg';
import itxLogo from '../assets/img/itx_logo.png';
import indraGroup from '../assets/img/indra_group.jpg';
---

<section id="timeline" class="timeline-section">
  <div class="timeline-container">
    <!-- Header de la sección -->
    <div class="timeline-header">
      <h2 class="section-title">
        <span class="text-gradient">My Journey</span>
      </h2>
      <p class="section-subtitle">
        Professional and academic milestones that shaped my career
      </p>
    </div>

    <!-- Timeline Layout -->
    <div class="timeline-layout">
      
      <!-- Timeline Line (Lado Izquierdo) -->
      <div class="timeline-line-container">
        <div class="timeline-line-base"></div>
        <div class="timeline-line-progress"></div>
        
        <!-- Timeline Dots/Markers -->
        <div class="timeline-dot" data-step="0" data-year="2017-2021">
          <div class="dot-inner education">
            <Image src={uscLogo} alt="USC Logo" class="dot-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
          </div>
        </div>
        
        <div class="timeline-dot" data-step="1" data-year="2021-2022">
          <div class="dot-inner education">
            <Image src={ucmLogo} alt="UCM Logo" class="dot-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
          </div>
        </div>
        
        <div class="timeline-dot" data-step="2" data-year="2021-2023">
          <div class="dot-inner work">
            <Image src={minsaitLogo} alt="Minsait Logo" class="dot-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
          </div>
        </div>
        
        <div class="timeline-dot" data-step="3" data-year="2023-Today">
          <div class="dot-inner work current">
            <Image src={minsaitLogo} alt="Minsait Logo" class="dot-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
          </div>
        </div>
      </div>

      <!-- Content Area (Lado Derecho) -->
      <div class="timeline-content-area">
        
        <!-- Step 0: Grado en Matemáticas -->
        <div class="timeline-step" data-step="0">
          <div class="step-card">
            <div class="card-header">
              <div class="date-badge">2017 - 2021</div>
              <div class="institution-logos">
                <Image src={uscLogo} alt="USC Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
                <Image src={lodzLogo} alt="Lodz University Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
              </div>
            </div>
            
            <div class="card-content">
              <h3 class="step-title">Grado en Matemáticas</h3>
              <p class="step-institution">Universidade de Santiago de Compostela • Lodz University</p>
              
              <div class="step-image">
                <Image src={facultadeMatematicas} alt="Facultad de Matemáticas" class="content-image" width={500} height={300} format="webp" quality={85} loading="lazy" />
              </div>
              
              <div class="step-achievements">
                <div class="achievement">
                  <span class="achievement-label">Average Grade:</span>
                  <span class="achievement-value">8.4</span>
                </div>
                <div class="achievement">
                  <span class="achievement-label">Final Project:</span>
                  <span class="achievement-value">Computational Geometry</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 1: Máster Big Data -->
        <div class="timeline-step" data-step="1">
          <div class="step-card">
            <div class="card-header">
              <div class="date-badge">2021 - 2022</div>
              <div class="institution-logos">
                <Image src={ucmLogo} alt="UCM Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
              </div>
            </div>
            
            <div class="card-content">
              <h3 class="step-title">Máster en Big Data & Data Science</h3>
              <p class="step-institution">Universidad Complutense de Madrid</p>
              
              <div class="step-image">
                <Image src={ucmImage} alt="UCM Campus" class="content-image" width={500} height={300} format="webp" quality={85} loading="lazy" />
              </div>
              
              <div class="step-achievements">
                <div class="achievement">
                  <span class="achievement-label">Average Grade:</span>
                  <span class="achievement-value">8.2</span>
                </div>
                <div class="achievement">
                  <span class="achievement-label">Master Thesis:</span>
                  <span class="achievement-value">KKBox Music Recommendation Challenge</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Data Analyst -->
        <div class="timeline-step" data-step="2">
          <div class="step-card">
            <div class="card-header">
              <div class="date-badge">2021 - 2023</div>
              <div class="institution-logos">
                <Image src={minsaitLogo} alt="Minsait Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
                <Image src={indraLogo} alt="Indra Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
                <Image src={itxLogo} alt="Inditex Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
              </div>
            </div>
            
            <div class="card-content">
              <h3 class="step-title">Data Analyst</h3>
              <p class="step-institution">Indra • Minsait</p>
              
              <div class="step-image">
                <Image src={indraOffice} alt="Indra Office" class="content-image" width={500} height={300} format="webp" quality={85} loading="lazy" />
              </div>
              
              <div class="step-achievements">
                <div class="achievement">
                  <span class="achievement-label">Key Skills:</span>
                  <span class="achievement-value">PowerBI, SSRS, SQL</span>
                </div>
                <div class="achievement">
                  <span class="achievement-label">Technologies:</span>
                  <span class="achievement-value">DB2, Oracle, Snowflake</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3: Data Consultant -->
        <div class="timeline-step" data-step="3">
          <div class="step-card">
            <div class="card-header">
              <div class="date-badge">2023 - Today</div>
              <div class="institution-logos">
                <Image src={minsaitLogo} alt="Minsait Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
                <Image src={indraLogo} alt="Indra Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
                <Image src={itxLogo} alt="Inditex Logo" class="institution-logo" width={50} height={50} format="webp" quality={90} loading="lazy" />
              </div>
            </div>
            
            <div class="card-content">
              <h3 class="step-title">Data Consultant</h3>
              <p class="step-institution">Indra • Minsait</p>
              
              <div class="step-image">
                <Image src={itxOffice} alt="Inditex Office" class="content-image" width={500} height={300} format="webp" quality={85} loading="lazy" />
              </div>
              
              <div class="step-achievements">
                <div class="achievement">
                  <span class="achievement-label">Current Focus:</span>
                  <span class="achievement-value">Snowflake SQL, Power BI</span>
                </div>
                <div class="achievement">
                  <span class="achievement-label">Project Scale:</span>
                  <span class="achievement-value">Enterprise-level data processing</span>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  .timeline-section {
    min-height: 100vh;
    padding: 2rem 1rem;
    position: relative;
    overflow: hidden;
    /* Sin fondo - mantener el fondo original con estrellas */
  }

  .timeline-container {
    max-width: 1400px;
    height: calc(100vh - 12rem);
    margin: 0 auto;
    padding: 1rem;
    position: relative;
    display: flex;
    gap: 2rem;
  }

  /* ===== HEADER ===== */
  .timeline-header {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    z-index: 100;
    width: 100%;
    margin-bottom: 2rem;
    padding: 1rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    opacity: 0;
    transform: translateY(50px);
  }

  .section-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.4;
    opacity: 0;
    transform: translateY(30px);
  }

  /* ===== LAYOUT PRINCIPAL ===== */
  .timeline-layout {
    display: flex;
    width: 100%;
    height: 100%;
    gap: 3rem;
    margin-top: 8rem; /* Aumentado para asegurar que no se corte nada */
  }

  /* ===== TIMELINE SIDE (IZQUIERDA 20%) ===== */
  .timeline-line-container {
    width: 20%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 0.8rem;
    
    /* Estilo de card como las demás */
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  /* LÍNEA VERTICAL SIMPLE */
  .timeline-line-base {
    position: absolute;
    left: 50%;
    top: calc(2rem + 40px);  /* Padding + radio del primer círculo = centro del primer círculo */
    width: 4px;
    height: calc(100% - 4rem - 80px);  /* Altura total - padding - diámetro completo de círculos */
    background: rgba(79, 172, 254, 0.2);
    transform: translateX(-50%);
    z-index: 1;
    border-radius: 2px;
  }

  .timeline-line-progress {
    position: absolute;
    left: 50%;
    top: calc(2rem + 40px);  /* Igual que la línea base */
    width: 4px;
    height: 0%;
    background: linear-gradient(180deg, 
      #4facfe 0%, 
      #00f2fe 50%, 
      #4facfe 100%
    );
    transform: translateX(-50%);
    z-index: 2;
    transition: height 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }

  /* CÍRCULOS DISTRIBUIDOS UNIFORMEMENTE */
  .timeline-dot {
    position: relative;
    z-index: 10;
    margin: 0;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
  }

  /* Eliminar posicionamiento absoluto - usar flexbox natural */
  .timeline-dot[data-step="0"],
  .timeline-dot[data-step="1"],
  .timeline-dot[data-step="2"],
  .timeline-dot[data-step="3"] {
    position: relative;
    top: auto;
    left: auto;
    transform: none;
  }

  .dot-inner {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid rgba(255, 255, 255, 0.2);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }

  .dot-inner.education {
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    box-shadow: 0 0 20px rgba(37, 99, 235, 0.3);
  }

  .dot-inner.work {
    background: linear-gradient(135deg, #059669, #047857);
    box-shadow: 0 0 20px rgba(5, 150, 105, 0.3);
  }

  .dot-inner.current {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    box-shadow: 0 0 25px rgba(79, 172, 254, 0.4);
  }

  .timeline-dot.active .dot-inner {
    transform: scale(1.2);
    box-shadow: 0 0 40px rgba(79, 172, 254, 0.8);
    border-color: rgba(79, 172, 254, 1);
  }

  .dot-logo {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 50%;
    background: white;
    padding: 3px;
  }

  /* ===== CONTENT AREA (DERECHA 80%) ===== */
  .timeline-content-area {
    width: 80%;
    height: 100%;
    position: relative;
    
    /* Estilo de card como las demás */
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    
    /* Scroll controlado */
    overflow-y: auto;
    scroll-behavior: smooth;
    scroll-snap-type: y mandatory;
    
    /* Scrollbar personalizada */
    scrollbar-width: thin;
    scrollbar-color: rgba(79, 172, 254, 0.5) transparent;
  }

  .timeline-content-area::-webkit-scrollbar {
    width: 8px;
  }

  .timeline-content-area::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }

  .timeline-content-area::-webkit-scrollbar-thumb {
    background: rgba(79, 172, 254, 0.5);
    border-radius: 4px;
  }

  .timeline-content-area::-webkit-scrollbar-thumb:hover {
    background: rgba(79, 172, 254, 0.8);
  }

  .timeline-step {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 1rem;
    scroll-snap-align: start;
    opacity: 0.6;
    transition: opacity 0.5s ease;
    overflow-y: hidden; /* Sin scroll interno */
    box-sizing: border-box;
  }

  .timeline-step.active {
    opacity: 1;
  }

  /* ===== STEP CARDS (SIMPLIFICADAS) ===== */
  .step-card {
    width: 100%;
    max-width: none;
    height: 100%;
    margin: 0;
    padding: 0;
    background: none;
    border: none;
    border-radius: 0;
    box-shadow: none;
    backdrop-filter: none;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
  }

  .step-card::before {
    display: none;
  }

  /* ===== CARD HEADER ===== */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.8rem;
    padding: 0 0.5rem;
    flex-shrink: 0;
    width: 100%;
  }

  .date-badge {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    color: #000;
    font-size: clamp(0.75rem, 1.2vw, 0.85rem);
    font-weight: 700;
    padding: 0.6rem 1rem;
    border-radius: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .institution-logos {
    display: flex;
    gap: 0.5rem;
  }

  .institution-logo {
    width: clamp(32px, 3.5vw, 40px);
    height: clamp(32px, 3.5vw, 40px);
    object-fit: contain;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.9);
    padding: 4px;
    transition: transform 0.3s ease;
  }

  .institution-logo:hover {
    transform: scale(1.1);
  }

  /* ===== CARD CONTENT (SIMPLIFICADO) ===== */
  .card-content {
    padding: 0 0.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 0;
    width: 100%;
    overflow: hidden;
  }

  .step-title {
    font-size: clamp(1.3rem, 2.8vw, 1.8rem);
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 0.5rem;
    line-height: 1.1;
    flex-shrink: 0;
  }

  .step-institution {
    font-size: clamp(0.9rem, 1.8vw, 1rem);
    color: #4facfe;
    font-weight: 600;
    margin-bottom: 0.5rem;
    flex-shrink: 0;
  }

  .step-description {
    font-size: clamp(0.8rem, 1.5vw, 0.9rem);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.3;
    margin-bottom: 0.8rem;
    flex-shrink: 0;
  }

  .step-image {
    margin: 0.6rem 0;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    flex-shrink: 0;
    max-height: clamp(100px, 12vh, 130px);
  }

  .content-image {
    width: 100%;
    height: clamp(100px, 12vh, 130px);
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .step-card:hover .content-image {
    transform: scale(1.05);
  }

  /* ===== ACHIEVEMENTS (SIMPLIFICADAS) ===== */
  .step-achievements {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 0.6rem;
    margin-top: 0.6rem;
    flex-shrink: 0;
  }

  .achievement {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 0.8rem;
    transition: all 0.3s ease;
  }

  .achievement:hover {
    background: rgba(79, 172, 254, 0.08);
    border-color: rgba(79, 172, 254, 0.3);
    transform: translateY(-2px);
  }

  .achievement-label {
    display: block;
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.3rem;
  }

  .achievement-value {
    display: block;
    font-size: clamp(0.8rem, 1.5vw, 0.9rem);
    color: #ffffff;
    font-weight: 600;
    line-height: 1.2;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 1200px) {
    .timeline-section {
      padding: 1.5rem 0.8rem;
    }

    .timeline-container {
      padding: 0.8rem;
      height: calc(100vh - 10rem);
    }

    .timeline-layout {
      gap: 1.5rem;
      margin-top: 6.5rem;
    }

    .timeline-line-container {
      width: 22%;
      padding: 1.5rem 0.6rem;
    }

    .timeline-content-area {
      width: 78%;
    }

    .dot-inner {
      width: 70px;
      height: 70px;
    }

    .dot-logo {
      width: 42px;
      height: 42px;
    }

    .step-title {
      font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    }

    .step-image {
      max-height: 120px;
    }

    .content-image {
      height: 120px;
    }
  }

  @media (max-width: 1024px) {
    .timeline-section {
      padding: 1.2rem 0.6rem;
    }

    .timeline-container {
      padding: 0.8rem;
      height: calc(100vh - 8rem);
    }

    .timeline-layout {
      gap: 1.2rem;
      margin-top: 6rem;
    }

    .timeline-line-container {
      width: 25%;
      padding: 1.2rem 0.5rem;
    }

    .timeline-content-area {
      width: 75%;
    }

    .dot-inner {
      width: 65px;
      height: 65px;
    }

    .dot-logo {
      width: 38px;
      height: 38px;
    }

    .step-title {
      font-size: clamp(1.1rem, 2.3vw, 1.4rem);
    }

    .step-image {
      max-height: 110px;
    }

    .content-image {
      height: 110px;
    }

    .achievement {
      padding: 0.7rem;
    }
  }

  @media (max-width: 768px) {
    .timeline-section {
      padding: 1.5rem 0.8rem;
    }

    .timeline-container {
      padding: 0.6rem;
      height: calc(100vh - 6rem);
    }

    .timeline-layout {
      flex-direction: column;
      gap: 1.5rem;
      margin-top: 5rem;
    }

    .timeline-header {
      margin-bottom: 1.5rem;
    }

    .timeline-line-container {
      width: 100%;
      height: auto;
      min-height: 80px;
      flex-direction: row;
      justify-content: space-between;
      padding: 0.8rem 2rem;
    }

    .timeline-line-base {
      position: absolute;
      top: 50%;
      left: calc(2rem + 25px);
      width: calc(100% - 4rem - 50px);
      height: 4px;
      transform: translateY(-50%);
    }

    .timeline-line-progress {
      position: absolute;
      top: 50%;
      left: calc(2rem + 25px);
      width: 0%;
      height: 4px;
      transform: translateY(-50%);
    }

    .timeline-dot {
      position: relative;
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
    }

    .timeline-content-area {
      width: 100%;
      height: calc(100vh - 250px);
      flex: 1;
    }

    .dot-inner {
      width: 50px;
      height: 50px;
    }

    .dot-logo {
      width: 30px;
      height: 30px;
    }

    .step-card {
      padding: 0;
      height: 100%;
      overflow: hidden;
    }

    .step-step {
      padding: 0.8rem;
    }

    .card-header {
      flex-direction: column;
      gap: 0.6rem;
      text-align: center;
      margin-bottom: 0.6rem;
    }

    .date-badge {
      font-size: 0.65rem;
      padding: 0.4rem 0.8rem;
    }

    .institution-logo {
      width: 28px;
      height: 28px;
    }

    .step-title {
      font-size: clamp(1rem, 3vw, 1.2rem);
      margin-bottom: 0.4rem;
    }

    .step-institution {
      font-size: clamp(0.75rem, 2vw, 0.85rem);
      margin-bottom: 0.4rem;
    }

    .step-description {
      font-size: clamp(0.7rem, 1.6vw, 0.8rem);
      margin-bottom: 0.6rem;
    }

    .content-image {
