import { Image } from 'astro:assets';
import profileImage from '../assets/img/profile.jpg';
---

<header class="header">
  <nav class="nav">
    <div class="nav-container">
      <!-- Logo/Brand con foto de perfil y redes sociales -->
      <div class="nav-brand">
        <div class="profile-section">
          <!-- Foto de perfil -->
          <div class="profile-photo">
            <Image 
              src={profileImage}
              alt="Pedro Chans" 
              class="profile-image"
              width={45}
              height={45}
              format="webp"
              quality={85}
              loading="eager"
            />
          </div>
          
          <!-- Iconos sociales -->
          <div class="social-icons">
            
