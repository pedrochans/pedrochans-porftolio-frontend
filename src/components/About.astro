---
// About.astro - Simple about section with profile carousel
import { Image } from 'astro:assets';

// Import profile images
import profile1 from '../assets/img/profile_1.JPG';
import profile2 from '../assets/img/profile_2.JPG';
import profile3 from '../assets/img/profile_3.jpg';
---

<section id="about" class="about-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">About Me</h2>
      <p class="section-subtitle">Get to know me better</p>
    </div>

    <div class="about-card">
      <div class="about-content">
        <!-- Left Side: Text Content -->
        <div class="about-text">
          <!-- Hero Section - Name & Title -->
          <div class="about-hero">
            <h3 class="about-title">Pedro Chans Fanego</h3>
          </div>

          <!-- Main Description -->
            <div class="about-description">
            <p class="intro-paragraph">
              Passionate data professional with a strong mathematical background and expertise in 
              business intelligence, data analytics, and modern data stack technologies.
            </p>
            <p class="current-role">
              Currently working as a Data Consultant at <a href="https://www.minsait.com" target="_blank" rel="noopener noreferrer">Minsait (Indra Group)</a> on the MAGI-C project 
              for <a href="https://www.inditex.com" target="_blank" rel="noopener noreferrer">Inditex</a>, focusing on gross margin calculation and stock valuation with enterprise-level 
              Snowflake implementations.
            </p>
            <p class="value-proposition">
                About my free time, I was passionate about competitive swimming for more than 10 years. Nowadays, I love staying active by playing volleyball and padel with friends, and hitting the gym regularly.
            </p>
            </div>

          <!-- Key Metrics - Bottom of text section -->
          <div class="about-highlights">
            <div class="highlight-item">
              <span class="highlight-number" id="years-experience">4+</span>
              <span class="highlight-text">Years Experience</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-number">8+</span>
              <span class="highlight-text">Projects</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-number">4</span>
              <span class="highlight-text">Certification Exams</span>
            </div>
            <div class="highlight-item">
              <span class="highlight-number">2</span>
              <span class="highlight-text">Hackatons</span>
            </div>
          </div>
        </div>

        <!-- Right Side: Visual Element -->
        <div class="about-visual">
          <div class="profile-carousel">
            <div class="carousel-container">
              <div class="carousel-slide active">
                <Image src={profile1} alt="Pedro Profile 1" class="profile-image" width={300} height={400} format="webp" quality={85} loading="lazy" />
              </div>
              <div class="carousel-slide">
                <Image src={profile2} alt="Pedro Profile 2" class="profile-image" width={300} height={400} format="webp" quality={85} loading="lazy" />
              </div>
              <div class="carousel-slide">
                <Image src={profile3} alt="Pedro Profile 3" class="profile-image" width={300} height={400} format="webp" quality={85} loading="lazy" />
              </div>
            </div>
            
            <div class="carousel-indicators">
              <button class="indicator active" data-slide="0"></button>
              <button class="indicator" data-slide="1"></button>
              <button class="indicator" data-slide="2"></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 30px rgba(79, 172, 254, 0.3);
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #b0b0b0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .about-card {
    background: linear-gradient(135deg, 
      rgba(79, 172, 254, 0.03) 0%, 
      rgba(0, 242, 254, 0.015) 50%, 
      rgba(255, 107, 107, 0.03) 100%);
    border: 1px solid rgba(79, 172, 254, 0.15);
    border-radius: 24px;
    padding: 50px;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(20px);
    opacity: 0;
    transform: translateY(50px);
    animation: fadeInUp 1s ease-out 0.6s forwards;
  }

  .about-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(79, 172, 254, 0.05) 50%, transparent 70%);
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: 50px;
    align-items: stretch;
    position: relative;
    z-index: 1;
    min-height: 450px;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 25px;
  }

  .about-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-hero {
    text-align: left;
    margin-bottom: 0;
  }

  .about-title {
    font-size: 3.2rem;
    font-weight: 800;
    margin-bottom: 8px;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.1;
  }

  .about-subtitle {
    font-size: 1.4rem;
    color: #4facfe;
    margin-bottom: 0;
    font-weight: 500;
    line-height: 1.3;
  }

  .about-highlights {
    display: flex;
    gap: 20px;
    padding: 20px 0 0 0;
    border-top: 1px solid rgba(79, 172, 254, 0.15);
    margin: 0;
    justify-content: center;
  }

  .about-description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #c0c0c0;
    margin: 0;
    flex-grow: 1;
  }

  .about-description p {
    margin-bottom: 18px;
  }

  .about-description p:last-child {
    margin-bottom: 0;
  }

  .intro-paragraph {
    font-size: 1.15rem;
    color: #d0d0d0;
    font-weight: 500;
  }

  .current-role {
    background: rgba(79, 172, 254, 0.08);
    border-left: 3px solid #4facfe;
    padding: 15px 18px;
    border-radius: 8px;
    margin: 15px 0 !important;
  }

  .value-proposition {
    font-style: normal;
    color: #d0d0d0;
    font-size: 1.15rem;
    font-weight: 500;
  }

  .about-description a {
    color: #4facfe;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
    position: relative;
  }

  .about-description a:hover {
    color: #00f2fe;
    border-bottom-color: #4facfe;
    text-shadow: 0 0 8px rgba(79, 172, 254, 0.4);
  }

  .about-description a:focus {
    outline: 2px solid #4facfe;
    outline-offset: 2px;
    border-radius: 2px;
  }

  .about-highlights {
    display: flex;
    gap: 30px;
  }

  .highlight-item {
    text-align: center;
  }

  .highlight-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 5px;
  }

  .highlight-text {
    font-size: 0.9rem;
    color: #b0b0b0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .profile-carousel {
    position: relative;
    width: 300px;
    height: 400px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 
      0 20px 40px rgba(79, 172, 254, 0.4),
      0 8px 16px rgba(0, 0, 0, 0.3);
    border: 3px solid rgba(79, 172, 254, 0.6);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-carousel:hover {
    transform: translateY(-3px) scale(1.01);
    box-shadow: 
      0 25px 50px rgba(79, 172, 254, 0.5),
      0 12px 24px rgba(0, 0, 0, 0.4);
  }

  .carousel-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.6s ease-in-out;
  }

  .carousel-slide.active {
    opacity: 1;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .carousel-indicators {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
  }

  .indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.5);
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .indicator.active {
    background: #4facfe;
    border-color: #4facfe;
    box-shadow: 0 0 10px rgba(79, 172, 254, 0.5);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 80px 0;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .about-visual {
      order: -1;
      position: static;
      display: flex;
      justify-content: center;
    }

    .about-text {
      order: 1;
      text-align: left;
      gap: 25px;
    }

    .about-hero {
      text-align: center;
    }

    .profile-carousel {
      width: 280px;
      height: 360px;
    }

    .about-title {
      font-size: 2.4rem;
    }

    .about-highlights {
      justify-content: center;
      gap: 15px;
      padding: 20px 20px 0 20px;
    }

    .current-role {
      padding: 15px 18px;
      margin: 20px 0 !important;
    }
  }

  @media (max-width: 480px) {
    .about-card {
      padding: 30px;
    }

    .about-highlights {
      flex-direction: column;
      gap: 15px;
    }

    .profile-carousel {
      width: 200px;
      height: 280px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Carousel functionality
    const slides = document.querySelectorAll('.carousel-slide');
    const indicators = document.querySelectorAll('.indicator');
    
    let currentSlide = 0;
    const totalSlides = slides.length;

    function showSlide(index) {
      slides.forEach(slide => slide.classList.remove('active'));
      indicators.forEach(indicator => indicator.classList.remove('active'));
      
      if (slides[index] && indicators[index]) {
        slides[index].classList.add('active');
        indicators[index].classList.add('active');
      }
      
      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => showSlide(index));
    });

    setInterval(nextSlide, 4000);

    // Calculate years of experience dynamically
    function calculateYearsOfExperience() {
      // Start date of professional career (adjust this date to your actual start date)
      const startDate = new Date('2021-12-01'); // Change this to your actual start date
      const currentDate = new Date();
      
      const timeDifference = currentDate.getTime() - startDate.getTime();
      const yearsDifference = Math.floor(timeDifference / (1000 * 3600 * 24 * 365.25));
      
      const yearsElement = document.getElementById('years-experience');
      if (yearsElement) {
        yearsElement.textContent = `${yearsDifference}+`;
      }
    }

    // Calculate and display years of experience
    calculateYearsOfExperience();
  });
</script>
