---
// Componente de Certificaciones con medallas interactivas
---

<section id="certifications" class="certifications">
  <div class="certifications-container">
    <div class="certifications-header">
      <h2 class="section-title">
        <span class="text-gradient">Certifications & Learning</span>
      </h2>
      <p class="section-subtitle">
        Professional certifications and continuous learning journey
      </p>
    </div>

    <!-- Sección de Certificaciones -->
    <div class="certifications-section">
      
      <!-- Medallas en línea horizontal -->
      <div class="medals-row" data-aos="fade-up" data-aos-delay="200">
        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="snowpro">
            <img src="/img/SnowProCore.png" alt="SnowPro Core Certification" class="cert-image">
            <canvas class="shine-canvas"></canvas>
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="azure">
            <img src="/img/AZ-900.png" alt="Azure Fundamentals Certification" class="cert-image">
            <canvas class="shine-canvas"></canvas>
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="powerbi">
            <img src="/img/PL-300.png" alt="Power BI Data Analyst Associate Certification" class="cert-image">
            <canvas class="shine-canvas"></canvas>
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="fabric">
            <img src="/img/DP-600-2.png" alt="Microsoft Fabric Analytics Engineer Associate Certification" class="cert-image">
            <canvas class="shine-canvas"></canvas>
          </div>
        </div>
      </div>

      <!-- Card de información dinámica mejorada -->
      <div class="certification-info-card" data-aos="fade-up" data-aos-delay="400">
        <div class="cert-info-content active" id="cert-snowpro">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">COF-C02</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">SnowPro Core Certification</h4>
                <p class="cert-description">Foundational knowledge of Snowflake's cloud data platform, architecture, and core features for data professionals.</p>
              </div>
            </div>
            <div class="cert-company">
              <img src="/img/snowflake_logo.png" alt="Snowflake" class="company-logo">
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-azure">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">AZ-900</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Azure Fundamentals</h4>
                <p class="cert-description">Foundational knowledge of cloud services and how those services are provided with Microsoft Azure platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <img src="/img/microsoft_logo.png" alt="Microsoft" class="company-logo">
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-powerbi">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">PL-300</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Power BI Data Analyst Associate</h4>
                <p class="cert-description">Advanced skills in data analysis, visualization, and business intelligence using Microsoft Power BI platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <img src="/img/microsoft_logo.png" alt="Microsoft" class="company-logo">
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-fabric">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">DP-600</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Fabric Analytics Engineer Associate</h4>
                <p class="cert-description">Expertise in implementing and managing comprehensive analytics solutions using Microsoft Fabric platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <img src="/img/microsoft_logo.png" alt="Microsoft" class="company-logo">
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sección de Cursos -->
    <div class="courses-section">
      <h3 class="subsection-title">
        <span class="course-icon">📚</span>
        Additional Learning
      </h3>
      
      <div class="courses-grid">
        <div class="course-card" data-aos="fade-up" data-aos-delay="500">
          <div class="course-header">
            <div class="course-icon-container">
              <span class="course-emoji">🐍</span>
            </div>
            <h4>Advanced Python for Data Science</h4>
          </div>
          <p class="course-provider">DataCamp</p>
          <p class="course-description">Advanced Python techniques for data manipulation, analysis, and machine learning.</p>
        </div>

        <div class="course-card" data-aos="fade-up" data-aos-delay="600">
          <div class="course-header">
            <div class="course-icon-container">
              <span class="course-emoji">🤖</span>
            </div>
            <h4>Machine Learning Specialization</h4>
          </div>
          <p class="course-provider">Coursera</p>
          <p class="course-description">Comprehensive course covering supervised and unsupervised learning algorithms.</p>
        </div>

        <div class="course-card" data-aos="fade-up" data-aos-delay="700">
          <div class="course-header">
            <div class="course-icon-container">
              <span class="course-emoji">☁️</span>
            </div>
            <h4>AWS Cloud Practitioner</h4>
          </div>
          <p class="course-provider">AWS Training</p>
          <p class="course-description">Fundamentals of Amazon Web Services cloud computing platform and services.</p>
        </div>

        <div class="course-card" data-aos="fade-up" data-aos-delay="800">
          <div class="course-header">
            <div class="course-icon-container">
              <span class="course-emoji">📊</span>
            </div>
            <h4>Advanced SQL and Database Design</h4>
          </div>
          <p class="course-provider">Udemy</p>
          <p class="course-description">Complex SQL queries, optimization, and database design best practices.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .certifications {
    min-height: 100vh;
    padding: 5rem 2rem;
    position: relative;
  }

  .certifications-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    background: linear-gradient(135deg, 
      rgba(12, 20, 39, 0.95) 0%, 
      rgba(30, 41, 59, 0.95) 50%, 
      rgba(12, 20, 39, 0.95) 100%
    );
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 4rem 3rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .certifications-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    margin-bottom: 1rem;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .section-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }

  .certifications-section,
  .courses-section {
    margin-bottom: 4rem;
  }

  .subsection-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2.5rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .certification-icon,
  .course-icon {
    font-size: 2.5rem;
  }

  /* ===== NUEVA DISPOSICIÓN DE MEDALLAS ===== */
  .medals-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem 0;
    gap: 2rem;
    opacity: 0;
    transform: translateY(30px);
  }

  .medals-row[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .medals-row .cert-container {
    flex: 1;
    display: flex;
    justify-content: center;
    perspective: 1500px;
  }

  .cert-image-wrapper {
    position: relative;
    cursor: pointer;
    transition: all 0.2s ease-out; /* Transición más rápida para mejor respuesta */
    border-radius: 12px;
    overflow: hidden;
    display: inline-block;
  }

  .cert-image {
    width: 200px;
    height: auto;
    max-height: 200px;
    object-fit: contain;
    border-radius: 12px;
    transition: all 0.3s ease;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
  }

  /* Canvas para el efecto de brillo */
  .shine-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s ease; /* Transición más rápida */
    z-index: 2;
  }

  /* Estados hover y active */
  .cert-image-wrapper:hover {
    transform: scale(1.1) translateY(-5px);
  }

  .cert-image-wrapper.active {
    transform: scale(1.15) translateY(-8px);
  }

  .cert-image-wrapper:hover .cert-image {
    filter: 
      drop-shadow(0 15px 25px rgba(0, 0, 0, 0.4))
      brightness(1.2)
      contrast(1.1);
  }

  /* ===== CARD DE INFORMACIÓN DINÁMICA MEJORADA ===== */
  .certification-info-card {
    background: linear-gradient(135deg, 
      rgba(12, 20, 39, 0.8) 0%, 
      rgba(30, 41, 59, 0.9) 50%, 
      rgba(12, 20, 39, 0.8) 100%
    );
    backdrop-filter: blur(30px);
    border: 1px solid rgba(59, 130, 246, 0.15);
    border-radius: 24px;
    padding: 0;
    margin-top: 4rem;
    height: 280px;
    position: relative;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
    overflow: hidden;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 1px 0 rgba(255, 255, 255, 0.05) inset;
  }

  .certification-info-card:hover {
    border-color: rgba(59, 130, 246, 0.25);
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.5),
      0 0 30px rgba(59, 130, 246, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.08) inset;
    transform: translateY(-2px);
  }

  .certification-info-card[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .cert-info-content {
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 3rem;
    transform: translateY(20px) scale(0.98);
    pointer-events: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    visibility: hidden;
  }

  .cert-info-content.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
    visibility: visible;
    transition-delay: 0.2s;
  }

  /* ===== ESTRUCTURA PRINCIPAL ===== */
  .cert-header {
    display: flex;
    align-items: flex-start;
    gap: 2.5rem;
    height: 100%;
  }

  .cert-main-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-height: 0;
  }

  /* ===== BADGE MEJORADO ===== */
  .cert-badge {
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.15) 0%, 
      rgba(59, 130, 246, 0.08) 100%
    );
    border: 2px solid rgba(59, 130, 246, 0.3);
    border-radius: 16px;
    padding: 1rem 1.5rem;
    backdrop-filter: blur(20px);
    box-shadow: 
      0 8px 20px rgba(59, 130, 246, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.1) inset;
    transition: all 0.3s ease;
    align-self: flex-start;
    position: relative;
    overflow: hidden;
  }

  .cert-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      transparent 100%
    );
    transition: left 0.6s ease;
  }

  .cert-info-content:hover .cert-badge::before {
    left: 100%;
  }

  .cert-badge:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 
      0 12px 25px rgba(59, 130, 246, 0.15),
      0 1px 0 rgba(255, 255, 255, 0.15) inset;
    transform: translateY(-1px);
  }

  .cert-code {
    color: #3b82f6;
    font-size: 1.1rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    line-height: 1;
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
  }

  /* ===== SECCIÓN DE TÍTULO Y DESCRIPCIÓN ===== */
  .cert-title-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .cert-title {
    color: #eff6ff;
    font-size: 2.2rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    background: linear-gradient(135deg, 
      #eff6ff 0%, 
      #bfdbfe 50%, 
      #93c5fd 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .cert-title {
    background: linear-gradient(135deg, 
      #ffffff 0%, 
      #dbeafe 50%, 
      #3b82f6 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transform: translateY(-2px);
  }

  .cert-description {
    color: rgba(239, 246, 255, 0.85);
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.01em;
    max-width: 100%;
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .cert-description {
    color: rgba(239, 246, 255, 0.95);
  }

  /* ===== LOGO DE EMPRESA MEJORADO ===== */
  .cert-company {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 1.5rem;
    backdrop-filter: blur(15px);
    transition: all 0.3s ease;
    width: 120px;
    height: 120px;
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .cert-company::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      transparent 0%, 
      rgba(59, 130, 246, 0.05) 50%, 
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cert-info-content:hover .cert-company::before {
    opacity: 1;
  }

  .cert-info-content:hover .cert-company {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(59, 130, 246, 0.15);
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .company-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
    filter: brightness(1.1) contrast(1.05);
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .company-logo {
    filter: brightness(1.2) contrast(1.1);
    transform: scale(1.1);
  }

  /* ===== MEDALLAS 3D ===== */
  .medal-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    perspective: 1000px;
  }

  .medal {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    position: relative;
    cursor: pointer;
    transform-style: preserve-3d;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .medal-face {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid;
    background: radial-gradient(circle at 30% 30%, 
      rgba(255, 255, 255, 0.4) 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      rgba(0, 0, 0, 0.1) 100%
    );
    overflow: hidden;
  }

  /* Colores específicos para cada certificación */
  .medal.snowpro .medal-face {
    background: linear-gradient(135deg, #29B5E8 0%, #1E90FF 50%, #0066CC 100%);
    border-color: rgba(41, 181, 232, 0.8);
    box-shadow: 0 0 30px rgba(41, 181, 232, 0.4);
  }

  .medal.azure .medal-face {
    background: linear-gradient(135deg, #0078D4 0%, #106EBE 50%, #005A9F 100%);
    border-color: rgba(0, 120, 212, 0.8);
    box-shadow: 0 0 30px rgba(0, 120, 212, 0.4);
  }

  .medal.powerbi .medal-face {
    background: linear-gradient(135deg, #F2C811 0%, #FFBF00 50%, #CC9900 100%);
    border-color: rgba(242, 200, 17, 0.8);
    box-shadow: 0 0 30px rgba(242, 200, 17, 0.4);
  }

  .medal.fabric .medal-face {
    background: linear-gradient(135deg, #6264A7 0%, #464775 50%, #2F2F5F 100%);
    border-color: rgba(98, 100, 167, 0.8);
    box-shadow: 0 0 30px rgba(98, 100, 167, 0.4);
  }

  .medal-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 10;
    position: relative;
  }

  .medal-logo {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cert-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(1.2) contrast(1.1);
  }

  .medal-text {
    text-align: center;
    color: white;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .cert-name {
    display: block;
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .cert-level {
    display: block;
    font-size: 0.7rem;
    font-weight: 500;
    opacity: 0.9;
  }

  /* Efecto de brillo metálico */
  .medal-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, 
      transparent 30%, 
      rgba(255, 255, 255, 0.3) 50%, 
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0;
    transition: all 0.6s ease;
    pointer-events: none;
  }

  .medal:hover .medal-shine {
    opacity: 1;
    transform: rotate(180deg);
  }

  /* Efecto de seguimiento del ratón */
  .medal:hover {
    transform: scale(1.1);
  }

  /* ===== INFORMACIÓN DE CERTIFICACIÓN (LEGACY) ===== */
  .certification-info h4 {
    font-size: 1.3rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .cert-provider {
    color: var(--accent-primary);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .cert-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  /* ===== GRID DE CURSOS ===== */
  .courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .course-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(30px);
  }

  .course-card[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    border-color: rgba(59, 130, 246, 0.2);
  }

  .course-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .course-icon-container {
    width: 50px;
    height: 50px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .course-emoji {
    font-size: 1.5rem;
  }

  .course-header h4 {
    font-size: 1.1rem;
    color: var(--text-primary);
    font-weight: 600;
    margin: 0;
  }

  .course-provider {
    color: var(--accent-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .course-description {
    color: var(--text-secondary);
    line-height: 1.5;
    font-size: 0.9rem;
  }

  /* ===== ANIMACIONES ===== */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .certifications {
      padding: 2rem 1rem;
    }

    .certifications-container {
      padding: 2rem 1.5rem;
      border-radius: 16px;
    }

    .medals-row {
      flex-direction: column;
      gap: 3rem;
    }

    .cert-image {
      width: 150px;
      max-height: 150px;
    }

    .certification-info-card {
      padding: 0;
      margin-top: 2rem;
      height: 320px;
    }

    .cert-info-content {
      padding: 2rem 1.5rem;
      gap: 1.5rem;
    }

    .cert-header {
      flex-direction: column;
      gap: 1.5rem;
      align-items: stretch;
    }

    .cert-main-info {
      gap: 1.5rem;
    }

    .cert-badge {
      align-self: flex-start;
      padding: 0.8rem 1.2rem;
