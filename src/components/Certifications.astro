  .section-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    margin-bottom: 1rem;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .section-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.4s forwards;
  }

  .certifications-section,
  .courses-section {
    margin-bottom: 4rem;
  }

  .subsection-title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2.5rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .certification-icon,
  .course-icon {
    font-size: 2.5rem;
  }

  /* ===== NUEVA DISPOSICIN DE MEDALLAS ===== */
  .medals-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem 0;
    gap: 2rem;
    opacity: 0;
    transform: translateY(30px);
  }

  .medals-row[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .medals-row .cert-container {
    flex: 1;
    display: flex;
    justify-content: center;
    perspective: 1500px;
  }

  .cert-image-wrapper {
    position: relative;
    cursor: pointer;
    transition: all 0.2s ease-out; /* Transici贸n m谩s r谩pida para mejor respuesta */
    border-radius: 12px;
    overflow: hidden;
    display: inline-block;
  }

  .cert-image {
    width: 200px;
    height: auto;
    max-height: 200px;
    object-fit: contain;
    border-radius: 12px;
    transition: all 0.3s ease;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
  }

  /* Canvas para el efecto de brillo */
  .shine-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s ease; /* Transici贸n m谩s r谩pida */
    z-index: 2;
  }

  /* Estados hover y active */
