---
// Componente de Certificaciones con medallas interactivas
import { Image } from 'astro:assets';

// Importar imágenes de certificaciones
import snowProCore from '../assets/img/SnowProCore.png';
import az900 from '../assets/img/AZ-900.png';
import pl300 from '../assets/img/PL-300.png';
import dp600 from '../assets/img/DP-600.png';
import snowflakeLogo from '../assets/img/snowflake_logo.png';
import microsoftLogo from '../assets/img/microsoft_logo.png';

// Importar logos de aprendizaje
import stanfordLogo from '../assets/img/stanford_logo.png';
import uscLogo from '../assets/img/USC_logo.png';
import xuntaLogo from '../assets/img/xunta_galicia_logo.png';
import cambridgeLogo from '../assets/img/cambridge_logo.png';
---

<section id="certifications" class="certifications">
  <div class="certifications-container">
    <div class="certifications-header">
      <h2 class="section-title">
        <span class="text-gradient">Certifications & Learning</span>
      </h2>
      <p class="section-subtitle">
        Professional certifications and continuous learning journey
      </p>
    </div>

    <!-- Sección de Certificaciones -->
    <div class="certifications-section">
      
      <!-- Medallas en línea horizontal -->
      <div class="medals-row" data-aos="fade-up" data-aos-delay="200">
        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="snowpro" data-url="https://achieve.snowflake.com/3567cd21-7bd0-4185-a8c4-93a74911df60">
            <Image src={snowProCore} alt="SnowPro Core Certification" class="cert-image" width={300} height={300} format="png" quality={100} loading="lazy" />
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="azure" data-url="https://learn.microsoft.com/api/credentials/share/es-es/ChansFanegoPedro-7409/F44E777D5B6793A4?sharingId">
            <Image src={az900} alt="Azure Fundamentals Certification" class="cert-image" width={300} height={300} format="png" quality={100} loading="lazy" />
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="powerbi" data-url="https://learn.microsoft.com/api/credentials/share/es-es/ChansFanegoPedro-7409/F44E777D5B6793A4?sharingId">
            <Image src={pl300} alt="Power BI Data Analyst Associate Certification" class="cert-image" width={300} height={300} format="png" quality={100} loading="lazy" />
          </div>
        </div>

        <div class="cert-container">
          <div class="cert-image-wrapper" data-cert="fabric" data-url="https://learn.microsoft.com/api/credentials/share/es-es/ChansFanegoPedro-7409/230585922EFBFBA?sharingId">
            <Image src={dp600} alt="Microsoft Fabric Analytics Engineer Associate Certification" class="cert-image" width={300} height={300} format="png" quality={100} loading="lazy" />
          </div>
        </div>
      </div>

      <!-- Card de información dinámica mejorada -->
      <div class="certification-info-card" data-aos="fade-up" data-aos-delay="400">
        <div class="cert-info-content active" id="cert-snowpro">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">COF-C02</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">SnowPro Core Certification</h4>
                <p class="cert-description">Perform data loading and transformation. Monitor and optimize virtual warehouse performance and concurrencies. Execute DDL and DML queries. Use structured, semi-structured, and unstructured data.</p>
              </div>
            </div>
            <div class="cert-company">
              <Image src={snowflakeLogo} alt="Snowflake" class="company-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-azure">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">AZ-900</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Azure Fundamentals</h4>
                <p class="cert-description">Foundational knowledge of cloud services and how those services are provided with Microsoft Azure platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <Image src={microsoftLogo} alt="Microsoft" class="company-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-powerbi">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">PL-300</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Power BI Data Analyst Associate</h4>
                <p class="cert-description">Advanced skills in data analysis, visualization, and business intelligence using Microsoft Power BI platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <Image src={microsoftLogo} alt="Microsoft" class="company-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
            </div>
          </div>
        </div>

        <div class="cert-info-content" id="cert-fabric">
          <div class="cert-header">
            <div class="cert-main-info">
              <div class="cert-badge">
                <span class="cert-code">DP-600</span>
              </div>
              <div class="cert-title-section">
                <h4 class="cert-title">Fabric Analytics Engineer Associate</h4>
                <p class="cert-description">Expertise in implementing and managing comprehensive analytics solutions using Microsoft Fabric platform.</p>
              </div>
            </div>
            <div class="cert-company">
              <Image src={microsoftLogo} alt="Microsoft" class="company-logo" width={40} height={40} format="webp" quality={90} loading="lazy" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Sección de Cursos -->
    <div class="courses-section">
      <h3 class="subsection-title">
        <span class="text-gradient">Additional Learning</span>
      </h3>
      
      <div class="additional-learning-grid">
        <!-- Course on Machine Learning - Stanford -->
        <div class="learning-card premium" data-aos="fade-up" data-aos-delay="500" data-url="https://www.coursera.org/account/accomplishments/verify/R55VSN2PEMW9">
          <div class="learning-header">
            <div class="learning-logo-container">
              <Image src={stanfordLogo} alt="Stanford University" class="learning-logo" width={60} height={60} format="webp" quality={90} loading="lazy" />
            </div>
            <div class="learning-content">
              <h4 class="learning-title">Course on Machine Learning</h4>
              <p class="learning-provider">Stanford University</p>
              <div class="learning-skills">
                <span class="skill-tag">Machine Learning</span>
              </div>
            </div>
          </div>
        </div>

        <!-- LaTeX Course - USC -->
        <div class="learning-card" data-aos="fade-up" data-aos-delay="600">
          <div class="learning-header">
            <div class="learning-logo-container">
              <Image src={uscLogo} alt="USC" class="learning-logo" width={60} height={60} format="webp" quality={90} loading="lazy" />
            </div>
            <div class="learning-content">
              <h4 class="learning-title">LaTeX Text Composition and Editing Course</h4>
              <p class="learning-provider">University of Santiago de Compostela</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Nueva Sección de Idiomas -->
    <div class="languages-section">
      <h3 class="subsection-title">
        <span class="text-gradient">Languages</span>
      </h3>
      
      <div class="languages-grid">
        <!-- CELGA 4 - Xunta de Galicia -->
        <div class="learning-card language" data-aos="fade-up" data-aos-delay="700">
          <div class="learning-header">
            <div class="learning-logo-container">
              <Image src={xuntaLogo} alt="Xunta de Galicia" class="learning-logo" width={60} height={60} format="webp" quality={90} loading="lazy" />
            </div>
            <div class="learning-content">
              <h4 class="learning-title">CELGA 4</h4>
              <p class="learning-provider">Government of Galicia</p>
              <div class="learning-skills">
                <span class="skill-tag language-tag">Galician</span>
              </div>
            </div>
          </div>
        </div>

        <!-- B2 First - Cambridge English -->
        <div class="learning-card language" data-aos="fade-up" data-aos-delay="800">
          <div class="learning-header">
            <div class="learning-logo-container">
              <Image src={cambridgeLogo} alt="Cambridge English" class="learning-logo" width={60} height={60} format="webp" quality={90} loading="lazy" />
            </div>
            <div class="learning-content">
              <h4 class="learning-title">B2 First</h4>
              <p class="learning-provider">Cambridge English</p>
              <div class="learning-skills">
                <span class="skill-tag language-tag">English</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .certifications {
    min-height: 100vh;
    padding: 5rem 2rem;
    position: relative;
  }

  .certifications-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    background: linear-gradient(135deg, 
      rgba(12, 20, 39, 0.95) 0%, 
      rgba(30, 41, 59, 0.95) 50%, 
      rgba(12, 20, 39, 0.95) 100%
    );
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 4rem 3rem 2rem 3rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .certifications-header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
  }

  .section-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 30px rgba(79, 172, 254, 0.3);
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #b0b0b0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .certifications-section,
  .courses-section {
    margin-bottom: 2rem;
  }

  .courses-section {
    margin-bottom: 3rem;
    margin-top: 5rem;
  }

  .languages-section {
    margin-bottom: 1rem;
  }

  .subsection-title {
    font-size: 2.2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    text-align: center;
  }

  .subsection-title .text-gradient {
    color: #4facfe;
  }

  .certification-icon,
  .course-icon {
    font-size: 2.5rem;
  }

  /* ===== NUEVA DISPOSICIÓN DE MEDALLAS ===== */
  .medals-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem 0;
    gap: 2rem;
    opacity: 0;
    transform: translateY(30px);
  }

  .medals-row[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .medals-row .cert-container {
    flex: 1;
    display: flex;
    justify-content: center;
    perspective: 1500px;
  }

  .cert-image-wrapper {
    position: relative;
    cursor: pointer;
    transition: all 0.2s ease-out; /* Transición más rápida para mejor respuesta */
    border-radius: 12px;
    overflow: hidden;
    display: inline-block;
  }

  /* ===== ESTILOS PARA MEDALLONES CLICKEABLES ===== */
  .cert-image-wrapper[data-url] {
    cursor: pointer !important;
    user-select: none;
    position: relative;
    pointer-events: auto !important;
    z-index: 999 !important;
  }

  .cert-image-wrapper[data-url] *:not(.cert-link-indicator) {
    pointer-events: none !important;
  }

  .cert-image-wrapper[data-url]:hover {
    cursor: pointer !important;
    filter: brightness(1.15) !important;
  }

  .cert-image-wrapper[data-url]:active {
    transform: scale(0.98) !important;
  }

  .cert-image {
    width: 200px;
    height: 200px;
    object-fit: contain;
    border-radius: 12px;
    transition: all 0.3s ease;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
  }

  /* Canvas para el efecto de brillo */
  .shine-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.15s ease; /* Transición más rápida */
    z-index: 2;
  }

  /* Estados hover y active */
  .cert-image-wrapper:hover {
    transform: scale(1.1) translateY(-5px);
  }

  .cert-image-wrapper.active {
    transform: scale(1.15) translateY(-8px);
  }

  .cert-image-wrapper:hover .cert-image {
    filter: drop-shadow(0 15px 25px rgba(0, 0, 0, 0.4));
  }

  /* ===== CARD DE INFORMACIÓN DINÁMICA MEJORADA ===== */
  .certification-info-card {
    background: linear-gradient(135deg, 
      rgba(12, 20, 39, 0.8) 0%, 
      rgba(30, 41, 59, 0.9) 50%, 
      rgba(12, 20, 39, 0.8) 100%
    );
    backdrop-filter: blur(30px);
    border: 1px solid rgba(59, 130, 246, 0.15);
    border-radius: 24px;
    padding: 0;
    margin-top: 4rem;
    height: 320px;
    position: relative;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(30px);
    overflow: hidden;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 1px 0 rgba(255, 255, 255, 0.05) inset;
  }

  .certification-info-card:hover {
    border-color: rgba(59, 130, 246, 0.25);
    box-shadow: 
      0 25px 50px rgba(0, 0, 0, 0.5),
      0 0 30px rgba(59, 130, 246, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.08) inset;
    transform: translateY(-2px);
  }

  .certification-info-card[data-aos="fade-up"] {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .cert-info-content {
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 3.5rem;
    transform: translateY(20px) scale(0.98);
    pointer-events: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    visibility: hidden;
  }

  .cert-info-content.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
    visibility: visible;
    transition-delay: 0.2s;
  }

  /* ===== ESTRUCTURA PRINCIPAL ===== */
  .cert-header {
    display: flex;
    align-items: flex-start;
    gap: 2.5rem;
    height: 100%;
  }

  .cert-main-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-height: 0;
  }

  /* ===== BADGE MEJORADO ===== */
  .cert-badge {
    background: linear-gradient(135deg, 
      rgba(59, 130, 246, 0.15) 0%, 
      rgba(59, 130, 246, 0.08) 100%
    );
    border: 2px solid rgba(59, 130, 246, 0.3);
    border-radius: 16px;
    padding: 1rem 1.5rem;
    backdrop-filter: blur(20px);
    box-shadow: 
      0 8px 20px rgba(59, 130, 246, 0.1),
      0 1px 0 rgba(255, 255, 255, 0.1) inset;
    transition: all 0.3s ease;
    align-self: flex-start;
    position: relative;
    overflow: hidden;
  }

  .cert-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      transparent 100%
    );
    transition: left 0.6s ease;
  }

  .cert-info-content:hover .cert-badge::before {
    left: 100%;
  }

  .cert-badge:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 
      0 12px 25px rgba(59, 130, 246, 0.15),
      0 1px 0 rgba(255, 255, 255, 0.15) inset;
    transform: translateY(-1px);
  }

  .cert-code {
    color: #3b82f6;
    font-size: 1.1rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    line-height: 1;
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
  }

  /* ===== SECCIÓN DE TÍTULO Y DESCRIPCIÓN ===== */
  .cert-title-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .cert-title {
    color: #eff6ff;
    font-size: 2.2rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    background: linear-gradient(135deg, 
      #eff6ff 0%, 
      #bfdbfe 50%, 
      #93c5fd 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .cert-title {
    background: linear-gradient(135deg, 
      #ffffff 0%, 
      #dbeafe 50%, 
      #3b82f6 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transform: translateY(-2px);
  }

  .cert-description {
    color: rgba(239, 246, 255, 0.85);
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.01em;
    max-width: 100%;
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .cert-description {
    color: rgba(239, 246, 255, 0.95);
  }

  /* ===== LOGO DE EMPRESA MEJORADO ===== */
  .cert-company {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 1.5rem;
    backdrop-filter: blur(15px);
    transition: all 0.3s ease;
    width: 120px;
    height: 120px;
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .cert-company::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      transparent 0%, 
      rgba(59, 130, 246, 0.05) 50%, 
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cert-info-content:hover .cert-company::before {
    opacity: 1;
  }

  .cert-info-content:hover .cert-company {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(59, 130, 246, 0.15);
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .company-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
    filter: brightness(1.1) contrast(1.05);
    transition: all 0.3s ease;
  }

  .cert-info-content:hover .company-logo {
    filter: brightness(1.2) contrast(1.1);
    transform: scale(1.1);
  }

  /* ===== MEDALLAS 3D ===== */
  .medal-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    perspective: 1000px;
  }

  .medal {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    position: relative;
    cursor: pointer;
    transform-style: preserve-3d;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .medal-face {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 4px solid;
    background: radial-gradient(circle at 30% 30%, 
      rgba(255, 255, 255, 0.4) 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      rgba(0, 0, 0, 0.1) 100%
    );
    overflow: hidden;
  }

  /* Colores específicos para cada certificación */
  .medal.snowpro .medal-face {
    background: linear-gradient(135deg, #29B5E8 0%, #1E90FF 50%, #0066CC 100%);
    border-color: rgba(41, 181, 232, 0.8);
    box-shadow: 0 0 30px rgba(41, 181, 232, 0.4);
  }

  .medal.azure .medal-face {
    background: linear-gradient(135deg, #0078D4 0%, #106EBE 50%, #005A9F 100%);
    border-color: rgba(0, 120, 212, 0.8);
    box-shadow: 0 0 30px rgba(0, 120, 212, 0.4);
  }

  .medal.powerbi .medal-face {
    background: linear-gradient(135deg, #F2C811 0%, #FFBF00 50%, #CC9900 100%);
    border-color: rgba(242, 200, 17, 0.8);
    box-shadow: 0 0 30px rgba(242, 200, 17, 0.4);
  }

  .medal.fabric .medal-face {
    background: linear-gradient(135deg, #6264A7 0%, #464775 50%, #2F2F5F 100%);
    border-color: rgba(98, 100, 167, 0.8);
    box-shadow: 0 0 30px rgba(98, 100, 167, 0.4);
  }

  .medal-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 10;
    position: relative;
  }

  .medal-logo {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cert-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(1.2) contrast(1.1);
  }

  .medal-text {
    text-align: center;
    color: white;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .cert-name {
    display: block;
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .cert-level {
    display: block;
    font-size: 0.7rem;
    font-weight: 500;
    opacity: 0.9;
  }

  /* Efecto de brillo metálico */
  .medal-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, 
      transparent 30%, 
      rgba(255, 255, 255, 0.3) 50%, 
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0;
    transition: all 0.6s ease;
    pointer-events: none;
  }

  .medal:hover .medal-shine {
    opacity: 1;
    transform: rotate(180deg);
  }

  /* Efecto de seguimiento del ratón */
