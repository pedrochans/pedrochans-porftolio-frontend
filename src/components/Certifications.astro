<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Configurar animaciones de elementos
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          const delay = element.getAttribute('data-aos-delay') || '0';
          
          setTimeout(() => {
            element.style.animation = 'fadeInUp 0.8s ease-out forwards';
          }, parseInt(delay));
          
          observer.unobserve(element);
        }
      });
    }, {
      threshold: 0.2
    });

    // Observar todos los elementos con animación
    const animatedElements = document.querySelectorAll('[data-aos]');
    animatedElements.forEach((element) => {
      observer.observe(element);
    });

    // Sistema de cambio dinámico de información de certificaciones
    const certWrappers = document.querySelectorAll('.cert-image-wrapper[data-cert]');
    const certContents = document.querySelectorAll('.cert-info-content');
    let currentActive = 'snowpro'; // Certificación activa por defecto

    // Función para mostrar información de certificación con transición mejorada
    const showCertInfo = (certType: string) => {
      if (currentActive === certType) return;
      
      // Fase 1: Ocultar contenido actual inmediatamente
      certContents.forEach(content => {
        const contentElement = content as HTMLElement;
        contentElement.classList.remove('active');
      });
      
      // Fase 2: Después de un breve retraso, mostrar nuevo contenido
      setTimeout(() => {
        const targetContent = document.getElementById(`cert-${certType}`) as HTMLElement;
        if (targetContent) {
          targetContent.classList.add('active');
        }
      }, 150); // Retraso de 150ms para evitar solapamiento
      
      // Actualizar certificaciones activas
      certWrappers.forEach(wrapper => {
        (wrapper as HTMLElement).classList.remove('active');
      });
      
      const activeWrapper = document.querySelector(`[data-cert="${certType}"]`) as HTMLElement;
      if (activeWrapper) {
        activeWrapper.classList.add('active');
      }
      
      currentActive = certType;
    };

    // Inicializar primera certificación
    showCertInfo('snowpro');

    // Crear efecto de brillo que SOLO afecta píxeles no transparentes
    function createShineEffect() {
      certWrappers.forEach((wrapper) => {
        const wrapperElement = wrapper as HTMLElement;
        const imgElement = wrapperElement.querySelector('.cert-image') as HTMLImageElement;
        const canvas = wrapperElement.querySelector('.shine-canvas') as HTMLCanvasElement;
        
        if (!imgElement || !canvas) return;

        const ctx = canvas.getContext('2d');
        if (!ctx) return;

        let animationId: number;
        let shinePosition = -100;

        // Configurar el canvas
        function setupCanvas() {
          const rect = imgElement.getBoundingClientRect();
          canvas.width = imgElement.offsetWidth;
          canvas.height = imgElement.offsetHeight;
        }

        // Función para dibujar el efecto de brillo
        function drawShine() {
          if (!ctx) return;
          
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          
          // Crear un canvas temporal para analizar la imagen
          const tempCanvas = document.createElement('canvas');
          const tempCtx = tempCanvas.getContext('2d');
          if (!tempCtx) return;

          tempCanvas.width = canvas.width;
          tempCanvas.height = canvas.height;
          
          // Dibujar la imagen en el canvas temporal
          tempCtx.drawImage(imgElement, 0, 0, canvas.width, canvas.height);
          
          // Obtener los datos de píxeles de la imagen
          const imageData = tempCtx.getImageData(0, 0, canvas.width, canvas.height);
          const data = imageData.data;
          
          // Crear el gradiente de brillo
          const gradient = ctx.createLinearGradient(shinePosition, 0, shinePosition + 100, 0);
          gradient.addColorStop(0, 'rgba(255, 255, 255, 0)');
          gradient.addColorStop(0.5, 'rgba(255, 255, 255, 0.8)');
          gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');
          
          // Dibujar el brillo solo en píxeles no transparentes
          for (let i = 0; i < data.length; i += 4) {
            const alpha = data[i + 3]; // Canal alpha
            
            if (alpha > 0) { // Si el píxel no es transparente
              const pixelIndex = i / 4;
              const x = pixelIndex % canvas.width;
              const y = Math.floor(pixelIndex / canvas.width);
              
              // Solo dibujar si está en la zona del brillo
              if (x >= shinePosition && x <= shinePosition + 100) {
                const intensity = Math.max(0, 1 - Math.abs(x - (shinePosition + 50)) / 50);
                ctx.fillStyle = `rgba(255, 255, 255, ${intensity * 0.6})`;
                ctx.fillRect(x, y, 1, 1);
              }
            }
          }
        }

        // Animar el brillo
        function animateShine() {
          shinePosition += 18;
          
          if (shinePosition < canvas.width + 100) {
            drawShine();
            animationId = requestAnimationFrame(animateShine);
          } else {
            canvas.style.opacity = '0';
          }
        }

        // Event listeners
        wrapperElement.addEventListener('mouseenter', () => {
          setupCanvas();
          shinePosition = -100;
          canvas.style.opacity = '1';
          animateShine();
        });

        wrapperElement.addEventListener('mouseleave', () => {
          if (animationId) {
            cancelAnimationFrame(animationId);
          }
          canvas.style.opacity = '0';
          if (ctx) {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
          }
        });

        // Configurar canvas inicial
        imgElement.onload = setupCanvas;
        if (imgElement.complete) setupCanvas();
      });
    }

    // Inicializar el efecto de brillo
    createShineEffect();

    // Event listeners para las imágenes de certificación
    certWrappers.forEach((wrapper) => {
      const wrapperElement = wrapper as HTMLElement;
      const certType = wrapperElement.getAttribute('data-cert');
      
      if (!certType) return;

      // Hover para cambiar información
      wrapperElement.addEventListener('mouseenter', () => {
        showCertInfo(certType);
      });
      
      // Efecto 3D de seguimiento del ratón
      wrapperElement.addEventListener('mousemove', (e) => {
        const rect = wrapperElement.getBoundingClientRect();
        const centerX = rect.left + rect.width / 2;
        const centerY = rect.top + rect.height / 2;
        
        const mouseX = e.clientX;
        const mouseY = e.clientY;
        
        // Calcular rotación basada en posición del ratón
        const deltaX = (mouseX - centerX) / (rect.width / 2);
        const deltaY = (mouseY - centerY) / (rect.height / 2);
        
        // Limitar rotación a ±18 grados (más marcado que antes)
        const maxRotation = 25;
        const rotateX = Math.max(-maxRotation, Math.min(maxRotation, deltaY * maxRotation));
        const rotateY = Math.max(-maxRotation, Math.min(maxRotation, -deltaX * maxRotation));
        
        // Aplicar transformación con perspectiva 3D más intensa
        const baseScale = wrapperElement.classList.contains('active') ? 1.15 : 1.1;
        const baseY = wrapperElement.classList.contains('active') ? -8 : -5;
        
        wrapperElement.style.transform = `
          scale(${baseScale}) 
          translateY(${baseY}px) 
          perspective(800px) 
          rotateX(${rotateX}deg) 
          rotateY(${rotateY}deg)
        `;
      });
      
      // Resetear transformación al salir
      wrapperElement.addEventListener('mouseleave', () => {
        const baseScale = wrapperElement.classList.contains('active') ? 1.15 : 1;
        const baseY = wrapperElement.classList.contains('active') ? -8 : 0;
        
        wrapperElement.style.transform = `
          scale(${baseScale}) 
          translateY(${baseY}px) 
          perspective(1000px) 
          rotateX(0deg) 
          rotateY(0deg)
        `;
      });
    });
  });
</script>
