<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Detectar si es dispositivo m√≥vil
    const isMobile = window.innerWidth <= 768;
    
    // Configurar animaciones de elementos
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          const delay = element.getAttribute('data-aos-delay') || '0';
          
          setTimeout(() => {
            element.style.animation = 'fadeInUp 0.8s ease-out forwards';
          }, parseInt(delay));
          
          observer.unobserve(element);
        }
      });
    }, {
      threshold: 0.2
    });

    // Observar todos los elementos con animaci√≥n
    const animatedElements = document.querySelectorAll('[data-aos]');
    animatedElements.forEach((element) => {
      observer.observe(element);
    });

    // Sistema de cambio din√°mico de informaci√≥n de certificaciones (solo desktop)
    const certWrappers = document.querySelectorAll('.cert-image-wrapper[data-cert]');
    const certContents = document.querySelectorAll('.cert-info-content');
    let currentActive = 'snowpro'; // Certificaci√≥n activa por defecto

    // Variable para controlar transiciones en progreso
    let isTransitioning = false;
    let transitionTimeout: number | null = null;

    // Funci√≥n para mostrar informaci√≥n de certificaci√≥n con transici√≥n mejorada
    const showCertInfo = (certType: string) => {
      if (currentActive === certType) return;
      if (isTransitioning) {
        // Si hay una transici√≥n en progreso, cancelarla
        if (transitionTimeout) {
          clearTimeout(transitionTimeout);
        }
      }
      
      isTransitioning = true;
      
      // Fase 1: Ocultar TODO el contenido inmediatamente
      certContents.forEach(content => {
        const contentElement = content as HTMLElement;
        contentElement.classList.remove('active');
      });
      
      // Fase 2: Despu√©s de que la animaci√≥n de salida termine, mostrar nuevo contenido
      transitionTimeout = window.setTimeout(() => {
        const targetContent = document.getElementById(`cert-${certType}`) as HTMLElement;
        if (targetContent) {
          targetContent.classList.add('active');
        }
        isTransitioning = false;
        transitionTimeout = null;
      }, 200); // Retraso m√°s largo para asegurar que no hay solapamiento
      
      // Actualizar certificaciones activas
      certWrappers.forEach(wrapper => {
        (wrapper as HTMLElement).classList.remove('active');
      });
      
      const activeWrapper = document.querySelector(`[data-cert="${certType}"]`) as HTMLElement;
      if (activeWrapper) {
        activeWrapper.classList.add('active');
      }
      
      currentActive = certType;
    };

    // Inicializar primera certificaci√≥n (solo desktop)
    if (!isMobile) {
      showCertInfo('snowpro');
    }

    // ===== FUNCIONALIDAD DE CLICK EN MEDALLONES DE CERTIFICACIONES =====
    const setupClickableCertifications = () => {
      console.log('üîß Configurando medallones clickeables...');
      const clickableCerts = document.querySelectorAll('.cert-image-wrapper[data-url]');
      console.log(`üìç Medallones encontrados: ${clickableCerts.length}`);
      
      if (clickableCerts.length === 0) {
        console.warn('‚ö†Ô∏è No se encontraron medallones con data-url');
        return;
      }
      
      clickableCerts.forEach((element, index) => {
        const htmlElement = element as HTMLElement;
        const url = htmlElement.getAttribute('data-url');
        const certType = htmlElement.getAttribute('data-cert');
        console.log(`üèÖ Medall√≥n ${index + 1} (${certType}): URL = ${url}`);
        
        if (url) {
          // Configuraci√≥n de z-index y pointer events
          htmlElement.style.zIndex = '999';
          htmlElement.style.position = 'relative';
          htmlElement.style.pointerEvents = 'auto';
          htmlElement.style.cursor = 'pointer';
          
          // Asegurar que elementos hijos no interfieran
          const childElements = htmlElement.querySelectorAll('*');
          childElements.forEach(child => {
            const childEl = child as HTMLElement;
            childEl.style.pointerEvents = 'none';
          });
          
          // Funci√≥n de click
          const clickHandler = (e: Event) => {
            console.log(`üñ±Ô∏è Click en medall√≥n ${certType}: ${url}`);
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            
            // Efecto visual de click
            const originalTransform = htmlElement.style.transform;
            htmlElement.style.transition = 'transform 0.1s ease';
            htmlElement.style.transform = originalTransform + ' scale(0.95)';
            
            setTimeout(() => {
              // Restaurar transformaci√≥n
              htmlElement.style.transform = originalTransform;
              
              // Abrir URL
              try {
                console.log(`üåê Abriendo certificado: ${url}`);
                const newWindow = window.open(url, '_blank', 'noopener,noreferrer');
                
                if (!newWindow || newWindow.closed) {
                  console.warn('‚ö†Ô∏è window.open fall√≥, intentando m√©todo alternativo...');
                  
                  // M√©todo alternativo: crear enlace temporal
                  const tempLink = document.createElement('a');
                  tempLink.href = url;
                  tempLink.target = '_blank';
                  tempLink.rel = 'noopener noreferrer';
                  document.body.appendChild(tempLink);
                  tempLink.click();
                  document.body.removeChild(tempLink);
                  console.log('‚úÖ Certificado abierto con enlace temporal');
                } else {
                  console.log('‚úÖ Certificado abierto exitosamente');
                }
              } catch (error) {
                console.error('‚ùå Error al abrir certificado:', error);
                window.location.href = url;
              }
            }, 100);
          };
          
          // A√±adir event listeners
          htmlElement.addEventListener('click', clickHandler, true);
          htmlElement.addEventListener('click', clickHandler, false);
          
          // Efectos de hover mejorados (solo en desktop)
          if (!isMobile) {
            htmlElement.addEventListener('mouseenter', () => {
              console.log(`üîç Hover en medall√≥n ${certType}`);
              htmlElement.style.cursor = 'pointer';
              htmlElement.style.filter = 'brightness(1.2) drop-shadow(0 0 15px rgba(59, 130, 246, 0.4))';
            });

            htmlElement.addEventListener('mouseleave', () => {
              htmlElement.style.filter = '';
            });
          }
          
          console.log(`‚úÖ Click listeners a√±adidos al medall√≥n ${certType}`);
        } else {
          console.warn(`‚ö†Ô∏è Medall√≥n ${index + 1} no tiene URL v√°lida`);
        }
      });
    };

    // Ejecutar configuraci√≥n de medallones clickeables
    setupClickableCertifications();

    // Verificaci√≥n de medallones clickeables
    setTimeout(() => {
      console.log('üîç Verificaci√≥n de medallones clickeables...');
      const finalCheck = document.querySelectorAll('.cert-image-wrapper[data-url]');
      console.log(`üìä Total medallones clickeables: ${finalCheck.length}`);
      
      finalCheck.forEach((el, i) => {
        const htmlEl = el as HTMLElement;
        const url = htmlEl.getAttribute('data-url');
        const certType = htmlEl.getAttribute('data-cert');
        const isClickable = htmlEl.style.cursor === 'pointer';
        
        console.log(`üìå Medall√≥n ${i + 1} (${certType}):`, {
          url: url,
          clickeable: isClickable,
          hasAfterElement: window.getComputedStyle(htmlEl, '::after').content !== 'none'
        });
      });
    }, 2000);

    // ===== FUNCIONALIDAD DE CLICK EN LEARNING CARDS =====
    const setupClickableLearningCards = () => {
      console.log('üîß Configurando learning cards clickeables...');
      const clickableLearning = document.querySelectorAll('.learning-card[data-url]');
      console.log(`üìö Learning cards encontradas: ${clickableLearning.length}`);
      
      if (clickableLearning.length === 0) {
        console.warn('‚ö†Ô∏è No se encontraron learning cards con data-url');
        return;
      }
      
      clickableLearning.forEach((element, index) => {
        const htmlElement = element as HTMLElement;
        const url = htmlElement.getAttribute('data-url');
        const title = htmlElement.querySelector('.learning-title')?.textContent || 'Unknown';
        console.log(`üìñ Learning card ${index + 1} (${title}): URL = ${url}`);
        
        if (url) {
          // Configuraci√≥n de z-index y pointer events
          htmlElement.style.zIndex = '999';
          htmlElement.style.position = 'relative';
          htmlElement.style.pointerEvents = 'auto';
          htmlElement.style.cursor = 'pointer';
          
          // Funci√≥n de click
          const clickHandler = (e: Event) => {
            console.log(`üñ±Ô∏è Click en learning card "${title}": ${url}`);
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            
            // Efecto visual de click
            const originalTransform = htmlElement.style.transform;
            htmlElement.style.transition = 'transform 0.1s ease';
            htmlElement.style.transform = 'translateY(-6px) scale(0.98)';
            
            setTimeout(() => {
              // Restaurar transformaci√≥n
              htmlElement.style.transform = originalTransform;
              
              // Abrir URL
              try {
                console.log(`üåê Abriendo learning certificate: ${url}`);
                const newWindow = window.open(url, '_blank', 'noopener,noreferrer');
                
                if (!newWindow || newWindow.closed) {
                  console.warn('‚ö†Ô∏è window.open fall√≥, intentando m√©todo alternativo...');
                  
                  // M√©todo alternativo: crear enlace temporal
                  const tempLink = document.createElement('a');
                  tempLink.href = url;
                  tempLink.target = '_blank';
                  tempLink.rel = 'noopener noreferrer';
                  document.body.appendChild(tempLink);
                  tempLink.click();
                  document.body.removeChild(tempLink);
                  console.log('‚úÖ Learning certificate abierto con enlace temporal');
                } else {
                  console.log('‚úÖ Learning certificate abierto exitosamente');
                }
              } catch (error) {
                console.error('‚ùå Error al abrir learning certificate:', error);
                window.location.href = url;
              }
            }, 100);
          };
          
          // A√±adir event listeners
          htmlElement.addEventListener('click', clickHandler, true);
          htmlElement.addEventListener('click', clickHandler, false);
          
          // Efectos de hover
          htmlElement.addEventListener('mouseenter', () => {
            console.log(`üîç Hover en learning card "${title}"`);
          });
          
          console.log(`‚úÖ Click listeners a√±adidos a learning card "${title}"`);
        } else {
          console.warn(`‚ö†Ô∏è Learning card ${index + 1} no tiene URL v√°lida`);
        }
      });
    };

    // Ejecutar configuraci√≥n de learning cards clickeables
    setupClickableLearningCards();

    // Event listeners para las im√°genes de certificaci√≥n (solo desktop)
    if (!isMobile) {
      certWrappers.forEach((wrapper) => {
        const wrapperElement = wrapper as HTMLElement;
        const certType = wrapperElement.getAttribute('data-cert');
        
        if (!certType) return;

        // Hover para cambiar informaci√≥n
        wrapperElement.addEventListener('mouseenter', () => {
          showCertInfo(certType);
        });
        
        // Efecto 3D de seguimiento del rat√≥n
        wrapperElement.addEventListener('mousemove', (e) => {
          const rect = wrapperElement.getBoundingClientRect();
          const centerX = rect.left + rect.width / 2;
          const centerY = rect.top + rect.height / 2;
          
          const mouseX = e.clientX;
          const mouseY = e.clientY;
          
          // Calcular rotaci√≥n basada en posici√≥n del rat√≥n
          const deltaX = (mouseX - centerX) / (rect.width / 2);
          const deltaY = (mouseY - centerY) / (rect.height / 2);
          
          // Limitar rotaci√≥n a ¬±18 grados (m√°s marcado que antes)
          const maxRotation = 25;
          const rotateX = Math.max(-maxRotation, Math.min(maxRotation, deltaY * maxRotation));
          const rotateY = Math.max(-maxRotation, Math.min(maxRotation, -deltaX * maxRotation));
          
          // Aplicar transformaci√≥n con perspectiva 3D m√°s intensa
          const baseScale = wrapperElement.classList.contains('active') ? 1.15 : 1.1;
          const baseY = wrapperElement.classList.contains('active') ? -8 : -5;
          
          wrapperElement.style.transform = `
            scale(${baseScale}) 
            translateY(${baseY}px) 
            perspective(800px) 
            rotateX(${rotateX}deg) 
            rotateY(${rotateY}deg)
          `;
        });
        
        // Resetear transformaci√≥n al salir
        wrapperElement.addEventListener('mouseleave', () => {
          const baseScale = wrapperElement.classList.contains('active') ? 1.15 : 1;
          const baseY = wrapperElement.classList.contains('active') ? -8 : 0;
          
          wrapperElement.style.transform = `
            scale(${baseScale}) 
            translateY(${baseY}px) 
            perspective(1000px) 
            rotateX(0deg) 
            rotateY(0deg)
          `;
        });
      });
    }
  });
